<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gauges101.GaugeSamples">
    <ListView x:Name="listView" ItemsSource="{Binding}" ItemTapped="OnItemTapped">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ImageCell Text="{Binding Name}" TextColor="#B00F50" Detail="{Binding Description}" DetailColor="Gray" ImageSource="{Binding ThumbnailImageSource}"/>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>